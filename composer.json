{
    "name": "smartinus44/phpfilemerger",
    "type": "library",
    "description": "Merge multiple PHP file into one in PHP, I have used this script for Codingame.",
    "license": "MIT",
    "authors": [{
        "name": "Sylvain MARTIN",
        "email": "sylvain.martin-44@laposte.net",
        "role": "Developer"
    }],
    "require": {
        "php": "~7.1",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^7"
    },
    "autoload": {
        "classmap": [
            "bin/",
            "bin/Adapters/"
        ]
    },
    "scripts": {
        "test": "phpunit tests/*",
        "start": "php bin/index.php",
        "check-style": "phpcs bin tests",
        "fix-style": "phpcbf bin tests"
    },
    "config": {
        "sort-packages": true
    }
}